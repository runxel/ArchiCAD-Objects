
uiDialogWidth = 444 						! px
xOfs = 10									! Offset X-Richtung
yOfs = 5									! dynamischer Abstand Y-Richtung
linespace = 25								! Zeilenabstand
lengthOut = (uiDialogWidth/2)*0.6 - xOfs	! Länge UI_OUTFIELD
inOfs = lengthOut + xOfs 					! Offset UI_INFIELD
lengthIn = uiDialogWidth/2 - inOfs - xOfs 	! Länge UI_INFIELD
heightOutIn = 16
heightInPen = 20
heightInMat = 24

xOfs2 = uiDialogWidth/2 + xOfs 				! Offset 2. Spalte
inOfs2 = lengthOut + xOfs2 + xOfs



