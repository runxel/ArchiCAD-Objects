!--- 2d script ---!pen gs_penif gap < 0 then	text2 0, 0, "Oops!"else		unID = 1	hotspot2  0,	0,	unID, A, 1	 		: unID=unID+1  !base	hotspot2  A,	0,	unID, A, 2+256		: unID=unID+1  !move	hotspot2 -1,	0,	unID, A, 3 			: unID=unID+1  ! ref		! circles around boundary hotspots	circle2 0, 0, c_size	circle2 A, 0, c_size	line2 	0, marker_size,  0, -marker_size	line2 	A, marker_size,  A, -marker_size		! main "axis"	line2 0, 0, A, 0	hotline2 0, 0, A, 0		for i = 1 to n_obj*2		if i % 2 then dist = gap else dist = width_obj		add2 dist, 0		circle2 0, 0, c_size		line2  0, marker_size/3, 0, -marker_size/3		hotspot2 0, 0, unID : unID=unID+1	next iendif