!--- 3d script ---!pen     gs_penshadow  offmodel   wireif gap > 0 and b_3d then		unID = 1	hotspot  0,	0, 0,	unID, A, 1	 		: unID=unID+1  !base	hotspot  A,	0, 0,	unID, A, 2+256		: unID=unID+1  !move	hotspot -1,	0, 0,	unID, A, 3 			: unID=unID+1  ! ref		! circles around boundary hotspots	circle c_size	addx A	circle c_size	del 1	lin_ 	0, marker_size, 0,  0, -marker_size, 0	lin_ 	A, marker_size, 0,  A, -marker_size, 0		! main "axis"	lin_     0, 0, 0,  A, 0, 0	hotline  0, 0, 0,  A, 0, 0, unID : unID=unID+1		for i = 1 to n_obj*2		if i % 2 then dist = gap else dist = width_obj		addx dist		circle c_size		lin_  0, marker_size/3, 0,  0, -marker_size/3, 0		hotspot 0, 0, 0, unID : unID=unID+1	next iendif