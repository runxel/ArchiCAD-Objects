!!! Values---------------------------------------------------------------- !VALUES "A" RANGE[0.21,], CUSTOM      ! does not work for the hotspots (?)VALUES "B" RANGE[0.297,], CUSTOM     ! just for not letting the user put in lower val!!! secure the minimal sizes, see Master ScriptPARAMETERS A = A, B = BVALUES{2} "folding", 3,"links", 1,"rechts"VALUES{2} "endformat", 1,"mit Lochrand", 0,"ohne Lochrand"VALUES "papersize" "A3", "A2", "A1", "A0", customVALUES "n_margin" RANGE[,20]!!! papersizes ------------------------------------------------------------ !IF papersize = "A3" THEN	PARAMETERS A = 0.42, B = 0.297ENDIF IF papersize = "A2" THEN	PARAMETERS A = 0.594, B = 0.42ENDIFIF papersize = "A1" THEN	PARAMETERS A = 0.841, B = 0.594ENDIFIF papersize = "A0" THEN	PARAMETERS A = 1.189, B = 0.841ENDIFIF GLOB_MODPAR_NAME = "A" OR GLOB_MODPAR_NAME = "B" THEN	PARAMETERS papersize = "Individuell: " + STR("%.0mm",A) + " × " + STR("%.0mm",B)ENDIF!!! ---------------------------------------------------------------------- !IF NOT(endformat) THEN	HIDEPARAMETER "title_punch"ENDIFIF NOT(b_margin) THEN	LOCK "n_margin"ENDIFIF (B <= 0.297) THEN 			! A4 Größe in Höhe	HIDEPARAMETER "b_mid"ENDIFIF (A < 0.594) AND (A > 0.42) THEN 					! Breite zwischen A3 und A2	PARAMETERS endformat = 1, folding = 1	LOCK "endformat"ENDIFIF (B <= 0.297) OR ("endformat" = "3") THEN 		! kleiner als A3 oder ohne Lochrand: kein Marker	HIDEPARAMETER "b_diagonal"ENDIFIF A < 0.594 THEN 					! kleiner als A2: hide Restfaltung	HIDEPARAMETER "folding"ENDIF